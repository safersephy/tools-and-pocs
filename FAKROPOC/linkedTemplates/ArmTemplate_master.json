{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "FAKROPOC"
		},
		"FAKROBLDB_connectionString": {
			"type": "secureString",
			"metadata": "Secure string for 'connectionString' of 'FAKROBLDB'"
		},
		"FAKROPOCDV_servicePrincipalCredential": {
			"type": "secureString",
			"metadata": "Secure string for 'servicePrincipalCredential' of 'FAKROPOCDV'"
		},
		"FAKROPOCDV_properties_typeProperties_servicePrincipalId": {
			"type": "string",
			"defaultValue": "353fa32d-a5d9-48f7-a5b7-6a8f69108e3f"
		},
		"containerUri": {
			"type": "string",
			"metadata": "URI to storage account containing linked ARM templates"
		},
		"containerSasToken": {
			"type": "string",
			"metadata": "Sas token to storage account containing linked ARM templates"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "FAKROPOC_ArmTemplate_0",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					},
					"FAKROBLDB_connectionString": {
						"value": "[parameters('FAKROBLDB_connectionString')]"
					},
					"FAKROPOCDV_servicePrincipalCredential": {
						"value": "[parameters('FAKROPOCDV_servicePrincipalCredential')]"
					},
					"FAKROPOCDV_properties_typeProperties_servicePrincipalId": {
						"value": "[parameters('FAKROPOCDV_properties_typeProperties_servicePrincipalId')]"
					}
				}
			},
			"dependsOn": []
		},
		{
			"name": "FAKROPOC_ArmTemplate_1",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2018-02-01",
			"properties": {
				"mode": "incremental",
				"templateLink": {
					"uri": "[concat(parameters('containerUri'), '/ArmTemplate_1.json', parameters('containerSasToken'))]",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
					"factoryName": {
						"value": "[parameters('factoryName')]"
					}
				}
			},
			"dependsOn": [
				"[resourceId('Microsoft.Resources/deployments', 'FAKROPOC_ArmTemplate_0')]"
			]
		}
	]
}