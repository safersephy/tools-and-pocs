{
	"$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
		"factoryName": {
			"type": "string",
			"metadata": "Data Factory name",
			"defaultValue": "demosienn"
		}
	},
	"variables": {
		"factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
	},
	"resources": [
		{
			"name": "[concat(parameters('factoryName'), '/Sftp1')]",
			"type": "Microsoft.DataFactory/factories/linkedServices",
			"apiVersion": "2018-06-01",
			"properties": {
				"type": "Sftp",
				"annotations": [],
				"parameters": {
					"BaseURL": {
						"type": "string",
						"defaultValue": "ftp://test.testdefparam.com"
					},
					"Username": {
						"type": "string",
						"defaultValue": "userparam"
					},
					"Password": {
						"type": "string",
						"defaultValue": "passparam"
					}
				},
				"typeProperties": {
					"host": "@linkedService().BaseURL",
					"port": 22,
					"skipHostKeyValidation": false,
					"hostKeyFingerprint": "testfingerprint",
					"authenticationType": "Basic",
					"userName": "@linkedService().Username",
					"password": {
						"type": "SecureString",
						"value": "**********"
					}
				}
			},
			"dependsOn": []
		}
	]
}