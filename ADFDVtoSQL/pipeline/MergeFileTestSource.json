{
	"name": "MergeFileTestSource",
	"properties": {
		"activities": [
			{
				"name": "Copy data1",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"source": {
						"type": "JsonSource",
						"storeSettings": {
							"type": "AzureBlobFSReadSettings",
							"recursive": true,
							"wildcardFolderPath": {
								"value": "@{variables('debtorcode')}/@{variables('filenametick')}",
								"type": "Expression"
							},
							"wildcardFileName": "*.json",
							"enablePartitionDiscovery": false
						},
						"formatSettings": {
							"type": "JsonReadSettings"
						}
					},
					"sink": {
						"type": "JsonSink",
						"storeSettings": {
							"type": "AzureBlobFSWriteSettings",
							"copyBehavior": "MergeFiles"
						},
						"formatSettings": {
							"type": "JsonWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "MergeTest",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "MergeTestSink",
						"type": "DatasetReference"
					}
				]
			}
		],
		"variables": {
			"debtorcode": {
				"type": "String",
				"defaultValue": "321197"
			},
			"filenametick": {
				"type": "String",
				"defaultValue": "637636856972825204"
			}
		},
		"annotations": []
	}
}